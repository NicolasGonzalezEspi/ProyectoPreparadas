<Window x:Class="trabajoFinalInterfaces.CrearDireccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trabajoFinalInterfaces"
        mc:Ignorable="d"
        Title="Añadir Datos Dirección" Height="175" Width="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ingrese o edite la dirección:" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBox x:Name="txtIncidencia" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" Height="200" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="80" Margin="0,0,10,0" Click="Aceptar_Click"/>
            <Button Content="Cancelar" Width="80" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
