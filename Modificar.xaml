<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="trabajoFinalInterfaces.Modificar"
      Title="Modificar">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Fusionar el diccionario de recursos que contiene los estilos -->
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="#34485e" >

        <TextBlock Text="Importar Marketplace" 
                   FontSize="20" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="10,10,0,0"/>




        <DataGrid x:Name="dgProductos" Style="{StaticResource CustomDataGridStyle}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                 Margin="20, 65, 20, 20">

            <DataGrid.Columns>
                <DataGridTextColumn Header="user_login" Binding="{Binding userlogin}" Width="*" />
                <DataGridTextColumn Header="user_email" Binding="{Binding useremail}" Width="*" />
                <DataGridTextColumn Header="user_nicename" Binding="{Binding usernicename}" Width="*" />
                <DataGridTextColumn Header="first_name" Binding="{Binding firstname}" Width="*" />
                <DataGridTextColumn Header="last_name" Binding="{Binding lastname}" Width="*" />
                <DataGridTextColumn Header="telefono" Binding="{Binding telefono}" Width="*" />
                <DataGridTextColumn Header="account_funds" Binding="{Binding accountfunds}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Organizar archivos:" 
               FontSize="16" Foreground="White"
               HorizontalAlignment="Left" Margin="98,39,0,0"
               VerticalAlignment="Top" Visibility="Collapsed"/>
        <Button Content="Preparar archivos" Style="{StaticResource PageButtonStyle2}" FontSize="16.3" HorizontalAlignment="Left"  Margin="246,21,0,0" VerticalAlignment="Top" Click="Button_Click" Height="30" Width="150" ToolTip="Volcar 100 registros de la tabla a un CSV. Si hay 199 o menos se volcarán todos los restantes."/>
        <TextBlock x:Name="txtTotalRegistros" Foreground="White"  FontSize="36" 
    HorizontalAlignment="Left" Margin="701,7,0,0" 
    TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="80">
            <TextBlock.ToolTip>
                <ToolTip Content="El número de registros que quedan por preparar."/>
            </TextBlock.ToolTip>
        </TextBlock>

        <TextBlock Text="Total registros:" 
    FontSize="18" Foreground="White"
    HorizontalAlignment="Left" Margin="581,26,0,0"
    VerticalAlignment="Top">
            <TextBlock.ToolTip>
                <ToolTip Content="El número muestra el número de registros que quedan por preparar. Se irán volcando datos en bloques de 100-200 usuarias. "/>
            </TextBlock.ToolTip>
        </TextBlock>


        <Button Style="{StaticResource PageButtonStyle1}" Background="LightBlue" Content="Mover Nuevas Convos a BBDD Global"
            Width="270" Height="30"
            Foreground="Black"
            HorizontalAlignment="Left" Margin="1132,21,0,0"
            VerticalAlignment="Top" Click="BtnBorrar_Click" ToolTip="Todos los datos de Nuevas Convos se volcarán a BBDD Global para su almacenamiento a largo plazo."
               />
        <TextBlock Text="Fin del Proceso:" 
            FontSize="20" FontWeight="Bold" Foreground="White"
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Margin="969,24,0,0"/>



    </Grid>
</Page>
