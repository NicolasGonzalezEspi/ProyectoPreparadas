<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilos para los botones del Hub Principal -->
    <Style x:Key="HubPrincipalButtonStyle1" TargetType="Button">
        <Setter Property="Background" Value="#FF007ACC"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="FontSize" Value="15.8"/>
        <!--  <Setter Property="FontSize" Value="16"/> -->
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
   
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="200"/>
    </Style>

    <Style x:Key="HubPrincipalButtonStyle2" TargetType="Button">
        <Setter Property="Background" Value="#FF1E1E1E"/>
        <Setter Property="Foreground" Value="#FFDCDCDC"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderBrush" Value="#FF1E1E1E"/>
        <Setter Property="BorderThickness" Value="2"/>
  
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="220"/>
    </Style>

    <!-- Estilos para los botones dentro de las páginas -->
    <Style x:Key="PageButtonStyle1" TargetType="Button">
        <Setter Property="Background" Value="Salmon"/>
        <Setter Property="Foreground" Value="White"/>
        <!-- <Setter Property="FontSize" Value="15"/>
             <Setter Property="Height" Value="45"/>
     <Setter Property="Width" Value="180"/>
         <Setter Property="Padding" Value="10,8"/>
        -->
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderBrush" Value="#FF388E3C"/>
        <Setter Property="BorderThickness" Value="1"/>
     
   
    </Style>

    <Style x:Key="PageButtonStyle2" TargetType="Button">
        <Setter Property="Background" Value="#FF2196F3"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderBrush" Value="#FF1976D2"/>
        <Setter Property="BorderThickness" Value="2"/>
     
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="180"/>
    </Style>

    <!-- Estilos para los textos -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style x:Key="TitleTextStyle2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="SmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="#FF555555"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>
