<Window x:Class="trabajoFinalInterfaces.CrearProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trabajoFinalInterfaces"
        mc:Ignorable="d"
        Title="Crear Producto" Height="450" Width="800">
    <Grid>


        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Crear Producto " Margin="0, 70, 0,0" FontSize="20" />

            <TextBlock Text="SKU" Margin="0,20,0,0" Width="119"/>
            <TextBox x:Name="txtSKU" Text=""  VerticalAlignment="Top" Width="120" Margin="0,5,0,0"/>

            <TextBlock Text="Nombre Producto" Margin="0,20,0,0" Width="120"/>
            <TextBox x:Name="txtNombre_Producto" Text="" VerticalAlignment="Top" Width="120" Margin="0,5,0,0"/>

            <TextBlock Text="Modelo" Margin="0,20,0,0" Width="120"/>
            <TextBox x:Name="txtModelo" Text="" VerticalAlignment="Top" Width="120" Margin="0,5,0,0"/>          
            <TextBlock Text="Puntos" Margin="0,20,0,0" Width="120"/>
            <TextBox x:Name="txtPuntos" Text="" VerticalAlignment="Top" Width="120" Margin="0,5,0,0"/>

            <Button Content="Crear Producto" Click="CrearProductoMKP" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top"/>

        </StackPanel>
    </Grid>
</Window>
